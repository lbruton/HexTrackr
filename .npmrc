# HexTrackr NPM Security Configuration
# Prevent execution of install scripts to mitigate malware
ignore-scripts=true

# Set minimum audit level to catch moderate vulnerabilities  
audit-level=moderate

# Use package-lock.json as single source of truth
package-lock=true

# Disable automatic updates of package-lock.json
package-lock-only=false

# Enable fund messages (informational only)
fund=true