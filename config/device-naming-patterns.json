{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "title": "HexTrackr Device Naming Pattern Configuration",
  "description": "Configuration for parsing device hostnames and extracting site/location information",
  "version": "1.0.0",
  
  "deviceTypePatterns": [
    {
      "pattern": "nswan",
      "description": "Network Switch (WAN)",
      "type": "switch",
      "vendor": "CISCO",
      "precedence": 1
    },
    {
      "pattern": "swan",
      "description": "Switch",
      "type": "switch",
      "vendor": "CISCO",
      "precedence": 2
    },
    {
      "pattern": "nrwan",
      "description": "Network Router (WAN)",
      "type": "router",
      "vendor": "CISCO",
      "precedence": 3
    },
    {
      "pattern": "rtr",
      "description": "Router",
      "type": "router",
      "vendor": "CISCO",
      "precedence": 4
    },
    {
      "pattern": "ns\\d+com01",
      "description": "Network Switch with COM Interface (VLAN)",
      "type": "interface",
      "vendor": "CISCO",
      "precedence": 5,
      "comment": "Matches VLAN interfaces like tulns31com01-vlan31 (specific pattern with digits)"
    },
    {
      "pattern": "nfpan",
      "description": "Palo Alto Network Firewall",
      "type": "firewall",
      "vendor": "Palo Alto",
      "precedence": 6
    },
    {
      "pattern": "dnfpan",
      "description": "Palo Alto Development Network Firewall",
      "type": "firewall",
      "vendor": "Palo Alto",
      "precedence": 7,
      "comment": "Matches hostnames like barnsdnfpan01"
    },
    {
      "pattern": "nfscada",
      "description": "Palo Alto SCADA Firewall",
      "type": "firewall",
      "vendor": "Palo Alto",
      "precedence": 8
    },
    {
      "pattern": "nfdevpan",
      "description": "Palo Alto Network Firewall Development",
      "type": "firewall",
      "vendor": "Palo Alto",
      "precedence": 9,
      "comment": "Matches hostnames like tulnfdevpan01 (must match before generic devpan)"
    },
    {
      "pattern": "papan",
      "description": "Palo Alto PA Firewall",
      "type": "firewall",
      "vendor": "Palo Alto",
      "precedence": 10
    },
    {
      "pattern": "extpan",
      "description": "Palo Alto External Firewall",
      "type": "firewall",
      "vendor": "Palo Alto",
      "precedence": 11
    },
    {
      "pattern": "intpan",
      "description": "Palo Alto Internal Firewall",
      "type": "firewall",
      "vendor": "Palo Alto",
      "precedence": 12
    },
    {
      "pattern": "campuspan",
      "description": "Palo Alto Campus Firewall",
      "type": "firewall",
      "vendor": "Palo Alto",
      "precedence": 13
    },
    {
      "pattern": "devpan",
      "description": "Palo Alto Development Firewall",
      "type": "firewall",
      "vendor": "CISCO",
      "precedence": 14,
      "comment": "Generic devpan - less specific than nfdevpan"
    },
    {
      "pattern": "fw",
      "description": "Firewall (Generic)",
      "type": "firewall",
      "vendor": "CISCO",
      "precedence": 15
    },
    {
      "pattern": "asa",
      "description": "Cisco ASA Firewall",
      "type": "firewall",
      "vendor": "CISCO",
      "precedence": 16
    },
    {
      "pattern": "sw",
      "description": "Switch (Generic)",
      "type": "switch",
      "vendor": "CISCO",
      "precedence": 17
    },
    {
      "pattern": "newan",
      "description": "Edge Device",
      "type": "edge",
      "vendor": "CISCO",
      "precedence": 18
    }
  ],

  "vendorKeywords": {
    "CISCO": ["cisco"],
    "Palo Alto": ["pan", "palo", "paloalto"]
  },
  
  "locationPatterns": {
    "description": "Patterns for extracting location from hostname",
    "strategy": "device_type_prefix",
    "comment": "Location is everything BEFORE the device type pattern"
  },
  
  "siteCodeMappings": {
    "description": "Map extracted locations to known 4-character site codes (Hexagon EAM)",
    "comment": "Key = location string, Value = {site_code, confidence, aliases}",
    "mappings": [
      {
        "location": "tulsatower",
        "site_code": "TULS",
        "aliases": ["tulsa", "tulsatwr", "tulstower"],
        "confidence": 0.95,
        "source": "manual_config"
      },
      {
        "location": "stroud",
        "site_code": "STRO",
        "aliases": ["strd", "strou", "stroud"],
        "confidence": 0.95,
        "source": "manual_config"
      },
      {
        "location": "okc",
        "site_code": "OKCY",
        "aliases": ["oklahoma", "okcity", "oklahomacity"],
        "confidence": 0.90,
        "source": "manual_config"
      }
    ]
  },
  
  "fallbackRules": {
    "site_code_length": 4,
    "location_code_length": 5,
    "comment": "If regex parsing fails, fall back to substring extraction"
  },
  
  "fuzzyMatchSettings": {
    "enabled": true,
    "min_similarity": 0.6,
    "max_results": 5,
    "comment": "When user types site/location, fuzzy search existing codes"
  }
}
