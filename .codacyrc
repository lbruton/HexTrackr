{
  "version": 1,
  "toolSettings": {
    "eslint": {
      "configFile": ".eslintrc-codacy.json",
      "environments": ["browser", "node", "es6"],
      "ignorePatterns": [
        "node_modules/**",
        "backups/**",
        ".venv/**",
        "temp/**",
        "uploads/**",
        "logs/**",
        "data/**",
        "docs-html/**",
        "*.min.js",
        "scripts/pages/vulnerability-manager.js"
      ],
      "globals": {
        "bootstrap": true,
        "Papa": true,
        "agGrid": true,
        "ApexCharts": true,
        "DOMPurify": true,
        "document": true,
        "window": true,
        "console": true,
        "alert": true,
        "confirm": true,
        "fetch": true,
        "FormData": true,
        "File": true,
        "FileReader": true,
        "Blob": true,
        "URL": true,
        "XMLHttpRequest": true,
        "localStorage": true,
        "sessionStorage": true,
        "setTimeout": true,
        "btoa": true,
        "Chart": true,
        "jsPDF": true,
        "html2canvas": true,
        "Sortable": true,
        "createVulnerabilityGridOptions": true,
        "PaginationController": true,
        "VulnerabilityDataManager": true,
        "ModernVulnManager": true
      }
    }
  },
  "exclude_paths": [
    "node_modules/**",
    "backups/**",
    ".venv/**",
    "temp/**",
    "uploads/**",
    "logs/**",
    "data/**",
    "docs-html/**",
    "*.min.js",
    "scripts/pages/vulnerability-manager.js"
  ]
}
