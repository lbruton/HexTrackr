{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "HexTrackr User Preferences Schema",
  "description": "Schema for user preferences stored in browser local storage",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+$",
      "description": "Preference schema version for migration support",
      "example": "1.0"
    },
    "lastUpdated": {
      "type": "string",
      "format": "date-time",
      "description": "ISO timestamp of last preference update"
    },
    "vulnerabilityTable": {
      "type": "object",
      "properties": {
        "columns": {
          "type": "object",
          "patternProperties": {
            "^[a-zA-Z_][a-zA-Z0-9_]*$": {
              "type": "object",
              "properties": {
                "visible": {
                  "type": "boolean",
                  "description": "Column visibility state"
                },
                "width": {
                  "type": "integer",
                  "minimum": 50,
                  "maximum": 800,
                  "description": "Column width in pixels"
                },
                "pinned": {
                  "type": ["string", "null"],
                  "enum": ["left", "right", null],
                  "description": "Column pinning position"
                },
                "sortOrder": {
                  "type": "integer",
                  "minimum": 0,
                  "description": "Display order position"
                }
              },
              "required": ["visible", "width", "sortOrder"],
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        },
        "filters": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "columnId": {
                "type": "string",
                "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$",
                "description": "Column identifier"
              },
              "filterType": {
                "type": "string",
                "enum": ["text", "number", "date", "select"],
                "description": "Filter data type"
              },
              "condition": {
                "type": "string",
                "enum": [
                  "equals", "notEquals", "contains", "notContains", 
                  "startsWith", "endsWith", "greaterThan", "lessThan",
                  "greaterThanOrEqual", "lessThanOrEqual", "inRange"
                ],
                "description": "Filter condition operator"
              },
              "value": {
                "oneOf": [
                  {"type": "string"},
                  {"type": "number"},
                  {"type": "boolean"},
                  {"type": "array", "items": {"type": "string"}}
                ],
                "description": "Filter value"
              },
              "caseSensitive": {
                "type": "boolean",
                "default": false,
                "description": "Case sensitivity for text filters"
              }
            },
            "required": ["columnId", "filterType", "condition", "value"],
            "additionalProperties": false
          }
        },
        "grouping": {
          "type": "object",
          "properties": {
            "groupBy": {
              "type": ["string", "null"],
              "enum": ["cve_id", "hostname", null],
              "description": "Column to group by"
            },
            "expanded": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "List of expanded group keys"
            },
            "showCount": {
              "type": "boolean",
              "default": true,
              "description": "Show child count in group headers"
            },
            "defaultExpanded": {
              "type": "boolean",
              "default": false,
              "description": "Default expansion state for new groups"
            }
          },
          "required": ["groupBy", "expanded", "showCount", "defaultExpanded"],
          "additionalProperties": false
        },
        "pagination": {
          "type": "object",
          "properties": {
            "currentPage": {
              "type": "integer",
              "minimum": 0,
              "description": "Zero-based current page index"
            },
            "pageSize": {
              "type": "integer",
              "enum": [10, 25, 50, 100],
              "description": "Rows per page"
            },
            "totalRows": {
              "type": "integer",
              "minimum": 0,
              "description": "Total row count (calculated)"
            },
            "totalPages": {
              "type": "integer",
              "minimum": 0,
              "description": "Total page count (calculated)"
            }
          },
          "required": ["currentPage", "pageSize", "totalRows", "totalPages"],
          "additionalProperties": false
        }
      },
      "required": ["columns", "filters", "grouping", "pagination"],
      "additionalProperties": false
    }
  },
  "required": ["version", "lastUpdated", "vulnerabilityTable"],
  "additionalProperties": false,
  "examples": [
    {
      "version": "1.0",
      "lastUpdated": "2025-09-09T10:30:00Z",
      "vulnerabilityTable": {
        "columns": {
          "cve_id": {
            "visible": true,
            "width": 150,
            "pinned": "left",
            "sortOrder": 1
          },
          "severity": {
            "visible": true,
            "width": 100,
            "pinned": null,
            "sortOrder": 2
          },
          "hostname": {
            "visible": true,
            "width": 200,
            "pinned": null,
            "sortOrder": 3
          }
        },
        "filters": [
          {
            "columnId": "severity",
            "filterType": "select",
            "condition": "equals",
            "value": "Critical",
            "caseSensitive": false
          }
        ],
        "grouping": {
          "groupBy": "cve_id",
          "expanded": ["CVE-2023-1234"],
          "showCount": true,
          "defaultExpanded": false
        },
        "pagination": {
          "currentPage": 0,
          "pageSize": 25,
          "totalRows": 347,
          "totalPages": 14
        }
      }
    }
  ]
}