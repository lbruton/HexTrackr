{
  "spec": "003-ticket-bridging",
  "status": "IMPLEMENTED", 
  "description": "Universal ticket management with external system integration",
  "endpoints": [
    {
      "path": "/api/tickets",
      "method": "GET",
      "description": "Get tickets with filtering and pagination",
      "request": {
        "query": {
          "status": "string (optional)",
          "priority": "string (optional)", 
          "assigned_to": "string (optional)",
          "page": "number (default: 1)",
          "limit": "number (default: 50)"
        }
      },
      "response": {
        "schema": {
          "tickets": ["object"],
          "pagination": {
            "page": "number",
            "limit": "number", 
            "total": "number",
            "totalPages": "number"
          }
        }
      }
    },
    {
      "path": "/api/tickets",
      "method": "POST",
      "description": "Create new ticket with vulnerability correlation",
      "request": {
        "body": {
          "title": "string",
          "description": "string",
          "priority": "string", 
          "vulnerability_ids": ["string"],
          "devices": ["object"],
          "external_system": "string (optional)"
        }
      },
      "response": {
        "schema": {
          "id": "string",
          "title": "string",
          "status": "string",
          "created_at": "string",
          "external_ticket_id": "string|null"
        }
      }
    },
    {
      "path": "/api/tickets/{id}/attachments",
      "method": "POST",
      "description": "Upload attachment to ticket",
      "request": {
        "contentType": "multipart/form-data",
        "body": {
          "file": "file",
          "description": "string (optional)"
        }
      },
      "response": {
        "schema": {
          "id": "string",
          "filename": "string",
          "size": "number",
          "uploadedAt": "string"
        }
      }
    }
  ],
  "notes": "Full CRUD operations with ServiceNow integration and attachment support"
}