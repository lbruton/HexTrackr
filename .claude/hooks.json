{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": {
          "tool_name": "Edit|Write|MultiEdit",
          "file_path": "\\.(js|css|html|json)$"
        },
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/file-backup.sh",
            "run_in_background": false,
            "description": "Create timestamped backup of file before modification"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": {
          "tool_name": "Edit|Write|MultiEdit",
          "file_path": "\\.js$"
        },
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/lint-on-save.sh js",
            "run_in_background": true,
            "description": "Run ESLint on JavaScript files after edit"
          }
        ]
      },
      {
        "matcher": {
          "tool_name": "Edit|Write|MultiEdit",
          "file_path": "\\.css$"
        },
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/lint-on-save.sh css",
            "run_in_background": true,
            "description": "Run Stylelint on CSS files after edit"
          }
        ]
      },
      {
        "matcher": {
          "tool_name": "Edit|Write|MultiEdit",
          "file_path": "(server\\.js|scripts/.*\\.js|.*security.*\\.js)$"
        },
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/security-scan.sh",
            "run_in_background": true,
            "description": "Run security scan on security-sensitive files"
          }
        ]
      }
    ]
  }
}