{
  "name": "hextrackr-server",
  "version": "1.1.8",
  "description": "HexTrackr with database backend",
  "main": "app/public/server.js",
  "type": "commonjs",
  "scripts": {
    "start": "node app/public/server.js",
    "dev": "nodemon app/public/server.js",
    "init-db": "node app/public/scripts/init-database.js",
    "hooks:install": "git config core.hooksPath .githooks",
    "eslint": "eslint '**/*.js' --ignore-pattern '**/*.min.js' --config eslint.config.mjs",
    "eslint:fix": "eslint '**/*.js' --ignore-pattern '**/*.min.js' --config eslint.config.mjs --fix",
    "stylelint": "stylelint '**/*.css'",
    "stylelint:fix": "stylelint '**/*.css' --fix",
    "docs:generate": "node app/public/docs-html/html-content-updater.js",
    "docs:dev": "jsdoc -c jsdoc.dev.json",
    "docs:dev:watch": "nodemon --watch app --ext js --exec 'npm run docs:dev'",
    "docs:all": "npm run docs:dev && npm run docs:generate",
    "release": "node app/public/docs-html/html-content-updater.js",
    "lint:md": "markdownlint --config .markdownlint.json --ignore-path .markdownlintignore '**/*.md'",
    "lint:md:fix": "node app/public/scripts/fix-markdown.js",
    "lint:all": "npm run lint:md && npm run eslint && npm run stylelint",
    "fix:all": "npm run lint:md:fix && npm run eslint:fix && npm run stylelint:fix",
    "db:cleanup": "node scripts/db-snapshot-cleanup.js",
    "db:cleanup:execute": "node scripts/db-snapshot-cleanup.js --execute",
    "db:seed:create": "node app/scripts/build-seed-database.js",
    "db:seed:validate": "node app/scripts/validate-seed-database.js"
  },
  "dependencies": {
    "argon2": "^0.31.2",
    "better-sqlite3": "^12.4.1",
    "better-sqlite3-session-store": "^0.1.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csrf-sync": "^4.2.1",
    "dompurify": "^3.2.6",
    "dotenv": "^17.2.1",
    "esprima": "^4.0.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "express-session": "^1.18.2",
    "helmet": "^8.1.0",
    "highlight.js": "^11.11.1",
    "jszip": "^3.10.1",
    "marked": "^16.2.1",
    "multer": "^2.0.2",
    "node-cache": "^5.1.2",
    "node-fetch": "^3.3.2",
    "papaparse": "^5.4.1",
    "socket.io": "^4.8.1",
    "sqlite3": "^5.1.7",
    "uuid": "^12.0.0"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^5.2.3",
    "eslint": "^9.34.0",
    "eslint-formatter-compact": "^8.40.0",
    "jsdoc": "^4.0.4",
    "markdownlint-cli": "^0.41.0",
    "nodemon": "^3.0.1",
    "socket.io-client": "^4.8.1",
    "stylelint": "^16.23.1",
    "stylelint-config-standard": "^39.0.0",
    "zod": "^3.23.8"
  },
  "overrides": {
    "tar-fs": "2.1.4"
  }
}
