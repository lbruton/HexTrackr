{
  "name": "hextrackr-server",
  "version": "1.0.12",
  "description": "HexTrackr with database backend",
  "main": "app/public/server.js",
  "type": "commonjs",
  "scripts": {
    "start": "node app/public/server.js",
    "dev": "nodemon app/public/server.js",
    "init-db": "node app/public/scripts/init-database.js",
    "roadmap": "node scripts/generate-roadmap-portal.js",
    "hooks:install": "git config core.hooksPath .githooks",
    "eslint": "eslint '**/*.js' --ignore-pattern '**/*.min.js' --config eslint.config.mjs",
    "eslint:fix": "eslint '**/*.js' --ignore-pattern '**/*.min.js' --config eslint.config.mjs --fix",
    "stylelint": "stylelint '**/*.css'",
    "stylelint:fix": "stylelint '**/*.css' --fix",
    "docs:generate": "node app/public/docs-html/html-content-updater.js",
    "docs:analyze": "node app/public/scripts/generate-architecture-analysis.js && node app/public/docs-html/html-content-updater.js",
    "lint:md": "markdownlint --config .markdownlint.json --ignore-path .markdownlintignore '**/*.md'",
    "lint:md:fix": "node app/public/scripts/fix-markdown.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPatterns=__tests__/unit",
    "test:integration": "jest --testPathPatterns=__tests__/integration",
    "test:e2e": "npx playwright test",
    "test:all": "npm run test && npm run test:e2e",
    "lint:all": "npm run lint:md && npm run eslint && npm run stylelint",
    "fix:all": "npm run lint:md:fix && npm run eslint:fix && npm run stylelint:fix",
    "docs:review": "node scripts/gemini-docs-generator.js"
  },
  "dependencies": {
    "chart.js": "^4.4.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dompurify": "^3.2.6",
    "dotenv": "^17.2.1",
    "esprima": "^4.0.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "highlight.js": "^11.11.1",
    "jszip": "^3.10.1",
    "marked": "^16.2.1",
    "multer": "^2.0.2",
    "node-fetch": "^3.3.2",
    "papaparse": "^5.4.1",
    "socket.io": "^4.8.1",
    "sqlite3": "^5.1.7",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@stylistic/eslint-plugin": "^5.2.3",
    "@types/jest": "^30.0.0",
    "eslint": "^9.34.0",
    "eslint-formatter-compact": "^8.40.0",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "markdownlint-cli": "^0.41.0",
    "nodemon": "^3.0.1",
    "playwright": "^1.55.0",
    "stylelint": "^16.23.1",
    "stylelint-config-standard": "^39.0.0"
  }
}
